<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.suyogshrestha.dhyandeu.Timer"
    android:background="#263238"
    android:id="@+id/relativeLayout">


    <Button
        android:id="@+id/Circular_button"
        android:layout_width="170dp"
        android:layout_height="184dp"
        android:layout_above="@+id/text_view_countdown"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp"
        android:background="@drawable/circle_button"
        android:text="Tap me when distracted"
        tools:ignore="UnknownId"
        tools:layout_editor_absoluteX="95dp"
        tools:layout_editor_absoluteY="60dp" />


    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="126dp"
        android:layout_height="30dp"
        android:layout_above="@+id/timer_add_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:text="00:00"
        android:textAlignment="center"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="117dp"
        tools:layout_editor_absoluteY="260dp" />

    <Button
        android:id="@+id/button_start_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="94dp"
        android:layout_toLeftOf="@+id/text_view_countdown"
        android:layout_toStartOf="@+id/text_view_countdown"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="start"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="322dp" />

    <Button
        android:id="@+id/button_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_start_pause"
        android:layout_alignBottom="@+id/button_start_pause"
        android:layout_toEndOf="@+id/text_view_countdown"
        android:layout_toRightOf="@+id/text_view_countdown"
        android:backgroundTint="@color/colorPrimaryDark"
        android:text="reset"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="322dp"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timer_add_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Start Reading"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />

    <Button
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBaseline="@+id/button_reset"
        android:layout_alignBottom="@+id/button_reset"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_add_alert_black_24dp"
        android:backgroundTint="@color/Red"
        android:id="@+id/timer_add_button" />


</RelativeLayout>
